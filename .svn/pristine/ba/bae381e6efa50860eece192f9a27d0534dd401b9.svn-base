<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/ll_main_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!--
        <com.android.smartmobile.cz.view.MainMapView
            android:id="@+id/main_mapView"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </com.android.smartmobile.cz.view.MainMapView>
        -->

        <com.esri.android.map.MapView
            android:id="@+id/main_mapview"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </com.esri.android.map.MapView>
    </LinearLayout>

    <!-- *********左侧导航栏 菜单按钮列表******** -->

    <LinearLayout
        android:id="@+id/ll_main_menu_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/left_menu_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_main_menu_left_content"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" />

        <Button
            android:id="@+id/btn_left_menu_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_left_menu_setting" />
    </LinearLayout>

    <!-- *********左侧列表******** -->

    <LinearLayout
        android:id="@+id/ll_main_list_left"
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/ll_main_menu_left"
        android:orientation="horizontal"
        android:visibility="gone" >

        <include
            android:id="@+id/main_list_left_content"
            layout="@layout/pop_list" >
        </include>
    </LinearLayout>

    <!-- *********右边工具栏 菜单按钮列表******** -->

    <LinearLayout
        android:id="@+id/ll_main_menu_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >

        <include
            android:id="@+id/ll_right_toolmenu"
            layout="@layout/right_toolmenu" >
        </include>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_layermanager"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/ll_main_menu_right"
        android:orientation="horizontal"
        android:visibility="gone" >

        <include
            android:id="@+id/main_layermanager_content"
            layout="@layout/pop_layer" >
        </include>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_right_title"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:visibility="gone" >

        <include
            android:id="@+id/main_right_title_content"
            layout="@layout/layout_right_title" >
        </include>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_web"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/ll_main_list_left"
        android:visibility="gone" >

        <include
            android:id="@+id/view_web_content"
            layout="@layout/pop_web" >
        </include>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_main_scale"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/ll_main_menu_left"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:padding="5dp" >

        <View
            android:id="@+id/view_scale"
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/map_scale" />

        <TextView
            android:id="@+id/txt_main_scale_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/view_scale"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#080808"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_main_scale"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/view_scale"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#080808"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_main_scale_lever"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent" >

        <TextView
            android:id="@+id/txt_main_scale_lever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#CD950C"
            android:text=""
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>