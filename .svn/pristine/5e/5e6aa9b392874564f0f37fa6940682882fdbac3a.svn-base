		for (int j = 0; j < vector.size(); j++) {
			map = new HashMap<String, Object>();
			String[] columnStrings = vector.get(j);
			for (int i = 0; i < columnStrings.length; i++) {
				map.put(arrayColum[i], columnStrings[i]);
